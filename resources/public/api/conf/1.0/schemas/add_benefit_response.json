{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Add State Benefit Response",
  "description": "Add State Benefit Response",
  "type": "object",
  "properties": {
    "benefitId": {
      "description": "Unique identifier of the benefit type",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
      "type": "string",
      "example": "123e4567-e89b-12d3-a456-426614174000"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint",
            "type": "string",
            "example": "/individuals/state-benefits/{nino}/{taxYear}/{benefitId}"
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
            "type": "string",
            "enum": [
              "self",
              "list-state-benefits",
              "add-state-benefit",
              "delete-state-benefit",
              "ignore-state-benefit"
            ]
          },
          "method": {
            "description": "The HTTP method type for the endpoint",
            "type": "string",
            "enum": [
              "GET",
              "PUT",
              "DELETE",
              "POST"
            ]
          }
        },
        "required": [
          "href",
          "rel",
          "method"
        ]
      }
    }
  },
  "required": [
    "benefitId",
    "links"
  ]
}